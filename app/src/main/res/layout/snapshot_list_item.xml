<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    app:cardElevation="2dp"
    app:cardPreventCornerOverlap="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/snapshot_os_name_view"
            style="@android:style/TextAppearance.DeviceDefault.Large"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="Centos-6-x86"
            android:textColor="@android:color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/snapshot_description_tips"
            style="@android:style/TextAppearance.DeviceDefault.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_description"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/snapshot_os_name_view"/>

        <TextView
            android:id="@+id/snapshot_description_view"
            style="@android:style/TextAppearance.DeviceDefault.Small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="this for test"
            android:textColor="@android:color/black"
            app:layout_constraintLeft_toRightOf="@id/snapshot_description_tips"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/snapshot_os_name_view"/>

        <TextView
            android:id="@+id/snapshot_size_tips"
            style="@android:style/TextAppearance.DeviceDefault.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_snapshot_size"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/snapshot_description_view"/>

        <TextView
            android:id="@+id/snapshot_size_view"
            style="@android:style/TextAppearance.DeviceDefault.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="335 MB"
            android:textColor="@android:color/black"
            app:layout_constraintLeft_toRightOf="@id/snapshot_size_tips"
            app:layout_constraintTop_toBottomOf="@+id/snapshot_description_view"/>

        <TextView
            android:id="@+id/snapshot_uncompressed_size_tips"
            style="@android:style/TextAppearance.DeviceDefault.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_snapshot_uncompressed_size"
            app:layout_constraintLeft_toRightOf="@id/snapshot_size_view"
            app:layout_constraintTop_toBottomOf="@+id/snapshot_description_view"/>

        <TextView
            android:id="@+id/snapshot_uncompressed_size_view"
            style="@android:style/TextAppearance.DeviceDefault.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11264 MB"
            android:textColor="@android:color/black"
            app:layout_constraintLeft_toRightOf="@id/snapshot_uncompressed_size_tips"
            app:layout_constraintTop_toBottomOf="@+id/snapshot_description_view"/>

        <TextView
            android:id="@+id/snapshot_md5_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_md5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/snapshot_size_tips"/>

        <TextView
            android:id="@+id/snapshot_md5_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="884eb4475fb85939372d2118ae6b6aab"
            android:textColor="@android:color/black"
            app:layout_constraintLeft_toRightOf="@id/snapshot_md5_tips"
            app:layout_constraintTop_toBottomOf="@id/snapshot_size_tips"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>